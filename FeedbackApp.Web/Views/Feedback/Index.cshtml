@model FeedbackApp.Application.DTOs.FeedbackDto

@{
    ViewData["Title"] = "Feedback List";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="dropdown mb-2">
        <select class="form-control" id="customerNameFilter">
            <option value="">Select Customer</option>
        </select>
    </div>

    <div class="dropdown mb-2">
        <select class="form-control" id="categoryFilter">
            <option value="">Select Category</option>
        </select>
    </div>

    <div class="mb-2">
        <label>Submission Date Range</label>
        <input type="text" id="fromDate" class="input-sm form-control"> to <input type="text" id="toDate" class="input-sm form-control">
    </div>

    <button class="btn btn-primary mb-2" id="btnSearch">Search</button>
</div>

<div class="container">
    <button class="btn btn-primary" style="float:right" id="btnAdd">Add Feedback</button>
</div>

<div class="container">
    <table class="table table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Description</th>
                <th>Submission Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tblBody">

        </tbody>
    </table>
</div>
<div class="modal" id="FeedbackModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modalTitle"></h3>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="Id" value="1" />
                <div class="mb-2">
                    <label asp-for="CustomerName"></label>
                    <input type="text" asp-for="CustomerName" class="form-control" placeholder="Customer Name" />
                </div>
                <div class="mb-2">
                    <label asp-for="Category"></label>
                    <input type="text" asp-for="Category" class="form-control" placeholder="Category" />
                </div>
                <div class="mb-2">
                    <label asp-for="Description"></label>
                    <input type="textarea" asp-for="Description" class="form-control" placeholder="Description" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="Save" type="submit" onclick="Insert()">Save</button>
                <button class="btn btn-success" id="Update" type="submit" onclick="Update()" style="display:none">Update</button>
                <button class="btn btn-danger" data-bs-dismiss="modal" onclick="HideModal()">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/feedback.js"></script>
}

